# Recommended resource helm values for a minimal development environment setup of ACS.
# These settings ARE NOT RECOMMENDED for production installations.
[< if false >] # hide this comment in official helm charts
# Please keep in sync:
# - /operator/tests/*/*/*central-cr.yaml 
# - /deploy/common/local-dev-values.yaml
[< end >]
central:
  resources:
    requests:
      cpu: 300m
      memory: 1Gi
    limits:
      cpu: 1
      memory: 2Gi
  db:
    resources:
      requests:
        cpu: 500m
        memory: 1Gi
      limits:
        cpu: 700m
        memory: 2Gi
scanner:
  replicas: 1
  autoscaling:
    disable: true
  resources:
    requests:
      cpu: "300m"
      memory: "500Mi"
    limits:
      cpu: 1
      memory: "2Gi"
  dbResources:
    requests:
      cpu: "400m"
      memory: "512Mi"
    limits:
      cpu: 1
      memory: "1Gi"
[<- if .FeatureFlags.ROX_SCANNER_V4 >]
scannerV4:
  matcher:
    replicas: 1
    autoscaling:
      minReplicas: 1
      maxReplicas: 3
    resources:
      requests:
        memory: "1Gi"
        cpu: "500m"
      limits:
        memory: "1Gi"
        cpu: "500m"
  indexer:
    replicas: 1
    autoscaling:
      minReplicas: 1
      maxReplicas: 3
    resources:
      requests:
        memory: "1Gi"
        cpu: "500m"
      limits:
        memory: "1Gi"
        cpu: "500m"
  db:
    resources:
      requests:
        cpu: "500m"
        memory: "512Mi"
      limits:
        cpu: "500m"
        memory: "500Gi"
[<- end >]